#!/usr/bin/env perl

use common::sense;

use Getopt::Long;
use Pod::Usage;
use YAML::Tiny;

use App::DSC::DataTool;
use App::DSC::DataTool::Inputs;

my $conf;
my $server = 'all';
my $node   = 'all';
my @xml;
my @dat;
my @output;
my $list;
my $man;
my $help;

GetOptions(
    'conf=s'   => \$conf,
    'server=s' => \$server,
    'node=s'   => \$node,
    'xml=s'    => \@xml,
    'dat=s'    => \@dat,
    'output=s' => \@output,
    'list:s'   => \$list,
    'help|?'   => \$help,
    man        => \$man,
) or pod2usage( 2 );
pod2usage( 1 ) if $help;
pod2usage( -exitval => 0, -verbose => 2 ) if $man;

